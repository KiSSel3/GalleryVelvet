        margin: 0 auto 20px;
        position: relative;
        z-index: 1;
    }

    .form-title {
        font-size: 24px;
        font-weight: 600;
        margin: 0;
        position: relative;
        z-index: 1;
    }

    .form-subtitle {
        font-size: 16px;
        opacity: 0.9;
        margin: 10px 0 0;
        position: relative;
        z-index: 1;
    }

    .form-body {
        padding: 40px 30px;
    }

    .form-group {
