                <input asp-for="Name" 
                       class="form-input @(ViewData.ModelState["Name"]?.Errors.Count > 0 ? "error" : "")"
                       placeholder="–í–≤–µ–¥–∏—Ç–µ –Ω–∞–∑–≤–∞–Ω–∏–µ —Ç–µ–≥–∞..."
