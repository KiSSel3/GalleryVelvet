        gap: 20px;
    }

    .admin-card-header,
    .admin-card-body {
        padding: 20px;
    }

    .admin-card-actions {
        flex-direction: column;
        gap: 10px;
    }

    .admin-card-actions.single-action,
    .admin-card-actions.two-actions {
        justify-content: stretch;
    }

    .quick-actions-grid {
        grid-template-columns: 1fr;
    }

    .admin-btn {
