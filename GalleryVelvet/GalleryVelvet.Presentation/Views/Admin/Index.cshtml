        box-shadow: 0 4px 15px rgba(52, 152, 219, 0.3);
    }

    .admin-icon {
        font-size: 18px;
        flex-shrink: 0;
    }

    .fade-in {
        animation: fadeInUp 0.6s ease-out;
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .ripple {
        position: absolute;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.3);
        pointer-events: none;
        animation: rippleEffect 0.6s ease-out;
    }

    @@keyframes rippleEffect {
        to {
            transform: scale(2);
            opacity: 0;
        }
    }

    @@media (max-width: 768px) {
    .admin-container {
        padding: 20px 15px;
    }

    .admin-title {
        font-size: 36px;
    }

    .admin-grid {
