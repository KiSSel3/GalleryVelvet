    }

    .btn-secondary {
        background: transparent;
        color: #6c757d;
        border: 2px solid #dee2e6;
    }

    .btn-secondary:hover {
        background: #f8f9fa;
        color: #2c3e50;
        border-color: #6c757d;
        text-decoration: none;
    }

    .alert {
