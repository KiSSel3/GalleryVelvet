    }

    .action-btn-delete {
        background: #e74c3c;
        color: white;
    }

    .action-btn-delete:hover {
        background: #c0392b;
        transform: translateY(-1px);
    }

    .action-btn-restore {
        background: #27ae60;
        color: white;
    }

    .action-btn-restore:hover {
