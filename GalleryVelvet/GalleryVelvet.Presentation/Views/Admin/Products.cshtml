    }

    .product-info {
        display: flex;
        gap: 15px;
        align-items: center;
    }

    .product-image {
        width: 60px;
        height: 60px;
        object-fit: cover;
        border-radius: 8px;
        border: 2px solid #e9ecef;
        flex-shrink: 0;
    }

    .product-details h5 {
        margin: 0 0 5px 0;
        font-size: 16px;
        font-weight: 600;
        color: #2c3e50;
    }

    .product-details p {
