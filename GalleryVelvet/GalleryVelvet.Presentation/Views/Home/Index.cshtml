<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'Inter', Arial, sans-serif;
        background-color: #f5f5f5;
        color: #000;
        overflow-x: hidden;
    }

    .hero-background {
        height: 100vh;
        background: linear-gradient(135deg, #7dd3d8 0%, #b8e6e6 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        overflow: hidden;
    }

    .hero-content {
        text-align: center;
        z-index: 10;
    }

    .hero-title {
        font-size: 16px;
        font-weight: 320;
        line-height: 1.55;
        margin-bottom: 8px;
        color: #000;
    }

    .hero-subtitle {
        font-size: 16px;
        font-weight: 320;
        line-height: 1.55;
        color: #000;
    }

    .hero-nav {
        position: absolute;
        bottom: 60px;
        left: 50%;
        transform: translateX(-50%);
        display: flex;
        gap: 20px;
        z-index: 10;
    }

    .nav-btn {
        background: rgba(255, 255, 255, 0.3);
        border: none;
        padding: 10px 15px;
        cursor: pointer;
        font-size: 13px;
        font-weight: 300;
        color: #000;
        text-transform: uppercase;
        letter-spacing: 1px;
        transition: all 0.3s ease;
    }

    .nav-btn.active {
        background: rgba(255, 255, 255, 0.8);
    }

    .nav-btn:hover {
        background: rgba(255, 255, 255, 0.6);
    }

    @@keyframes spin {
        0% { transform: rotate(0deg); }
        100% { transform: rotate(360deg); }
    }
</style>

<section class="hero-background">
    <div class="hero-content">
        <div class="hero-title">Intelligence & Design</div>
        <div class="hero-subtitle">Fashion Brand</div>
    </div>
    <div class="hero-nav">
        <a asp-controller="Product"
           asp-action="Index"
           class="nav-btn active">
            WOMAN
        </a>
    </div>
</section>